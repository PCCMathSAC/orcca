            <title>Identifying Coordinates</title>
            <exercise>
                <!-- seed set to prevent crowding on points -->
                <webwork seed="1697">
                    <setup>
                        <pg-code>
                            @px=map{($_==0)?8:$_-8}(NchooseK(16,4));
                            @py=map{($_==0)?8:$_-8}(NchooseK(16,4));
                            $px[2]=0;
                            $py[3]=0;
                            $xmin = -10;$xmax = 10;
                            $ymin = -10;$ymax = 10;
                            $xmark = 2;
                            $ymark = 2;
                            $gr = init_graph($xmin,$ymin,$xmax,$ymax,
                               axes=>[0,0],
                               grid=>[($xmax-$xmin)/$xmark,($ymax-$ymin)/$ymark],
                               size=>[240,240]
                            );
                            $gr->lb('reset');
                            for($j=-$xmax+$xmark;$j&lt;$xmax;$j=$j+$xmark){if(Real($j)==0){$gr->lb(new Label(0,-0.1,' '.$j,'black','left','top'));}else{$gr->lb(new Label($j,-0.1,$j,'black','center','top','large'));}};
                            for($j=$ymin+$ymark;$j&lt;$ymax;$j=$j+$ymark){if(Real($j)==0){next;}$gr->lb(new Label(0, $j,' '.$j,'black','left','middle','large'));};
                            for my$i(0..3){$gr->stamps(closed_circle($px[$i],$py[$i],'blue'));
                              if ($px[$i]==0) {$gr->lb(new Label($px[$i]-0.3,$py[$i],$ALPHABET[$i],'blue','right','middle','large'));}
                              elsif ($py[$i]==0) {$gr->lb(new Label($px[$i],$py[$i]+0.3,$ALPHABET[$i],'blue','center','bottom','large'));}
                              elsif ($px[$i]>0 and $py[$i]>0) {$gr->lb(new Label($px[$i]+0.3,$py[$i]+0.3,$ALPHABET[$i],'blue','left','bottom'));}
                              elsif ($px[$i]&lt;0 and $py[$i]>0) {$gr->lb(new Label($px[$i]-0.3,$py[$i]+0.3,$ALPHABET[$i],'blue','right','bottom'));}
                              elsif ($px[$i]&lt;0 and $py[$i]&lt;0) {$gr->lb(new Label($px[$i]-0.3,$py[$i]-0.3,$ALPHABET[$i],'blue','right','top'));}
                              elsif ($px[$i]>0 and $py[$i]&lt;0) {$gr->lb(new Label($px[$i]+0.3,$py[$i]-0.3,$ALPHABET[$i],'blue','left','top'));}
                            };
                            Context("Point");
                            @ans=map{Compute("($px[$_],$py[$_])")}(0..3);
