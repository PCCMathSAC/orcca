            <!-- seed set to prevent crowding on points -->
        <webwork seed="1697">
            <setup>

            <pg-code>
                @px=map{($_==0)?8:$_-8}(NchooseK(16,4));
                @py=map{($_==0)?8:$_-8}(NchooseK(16,4));
