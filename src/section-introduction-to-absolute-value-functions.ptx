                                <![CDATA[\begin{tikzpicture}
                                \begin{axis}[xmin=-1,xmax=13,ymin=-6,ymax=6,    xtick=\empty, minor xtick=\empty, ytick={-5,0,5}, minor ytick={-4,-2,...,4}, grid=none]
                                \addplot[color=secondcolor] coordinates{(0,-5)(0,5)(12,5)(12,-5)(0,-5)};
                                \addplot[fill=brown!20!white] coordinates{(0,-1)(0.2,-1)(0.2,1)(0,1)(0,-1)};
