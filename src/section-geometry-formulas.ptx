<section xml:id="section-geometry-formulas">
  <title>Geometry Formulas</title>
  <objectives>
    <title>PCC Course Content and Outcome Guide</title>
    <ul>
      <li>
        <xref ref="ccog-explore-geometry-formulas" text="custom">MTH 65 CCOG</xref>
      </li>

