               <![CDATA[
                    \begin{tikzpicture}
                        \fill[firstcolor!20!white] (4,0) -- (5,0) -- (5,0.6666) -- (4,0);
                        \fill[firstcolor!20!white] (6,1) -- (7,1) -- (7,2) -- (6,1.3333);
