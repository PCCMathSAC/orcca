            elsif ($c[0]==$s[1]||$c[1]==$s[1]){return [0,1]}
            else {return [0,0]}
            });
            $ymax=int(max(2*$count, $t/$p2)/10+0.999)*10;
            $xmax=int(max(2*$count, $t/$p1)/10+0.999)*10;
