<section xml:id="section-standard-form" permid="mHl">
  <title>Standard Form</title>
  <objectives permid="Lyq">
    <title>PCC Course Content and Outcome Guide</title>
    <ul permid="EDL">
      <li permid="wZm"><xref ref="mth60-interpret-graphs" /></li>

      <li permid="dgv">
