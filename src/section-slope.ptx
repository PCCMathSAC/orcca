            $gr = init_graph(-5,-300,30,4000,axes=&gt;[0,0],size=&gt;[240,144]);
            $gr -&gt; v_grid('gray',map{2*$_}(1..14));
            $gr -&gt; h_grid('gray',map{500*$_}(1..7));
            $gr -&gt; lb('reset');
            for my$i(map{$_*2}(1..14)){$gr-&gt;lb(new Label($i,0,$i,'black','center','top','small'));}
            for my$i(map{$_*500}(1..7)){$gr-&gt;lb(new Label(0,$i,$i,'black','right','middle','small'));}
            $gr->h_ticks(0,"black",map{$_*2}(1..14));
