	            			domain = 0:3,
	            			-,
	            			smooth,
	            			thin,
	            			color = blue,
	          			]{4*x};
	          			\addplot[
	            			domain = 3:5,
	            			-,
	            			smooth,
	            			thin,
	            			color = red,
	          			]{12};
	          			\addplot[
	            			domain = 5:9,
	            			-,
