        			color = green,
      			]{0.5*x};
      			\addplot[
        			domain = -1:10,
        			<->,
        			smooth,
        			thin,
        			color = blue,
      			]{x};
      			\addplot[
        			domain = -0.5:5,
        			<->,
        			smooth,
        			thin,
        			color = brown,
      			]{2*x};
      			\node at (axis cs: 4,0) [color = black] {slope$=0$};
      			\node at (axis cs: 4,2) [color = green] {slope$=0.5$};
				\node at (axis cs: 4,4) [color = blue] {slope$=1$};
				\node at (axis cs: 4,8) [color = brown] {slope$=2$};
