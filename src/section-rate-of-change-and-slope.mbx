	          			\node at (axis cs: 0.5,0) [color = blue, above] {$1$ hour};
	          			\node at (axis cs: 1,2) [color = blue, right] {$4$ miles};
	          			\addplot[only marks,color=black]
	                    	coordinates{
	                    		(5,12)
	                   			(6,9)
	          			};
