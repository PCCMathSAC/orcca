      <exercise permid="MYV">
<!-- Kara's challenge problem -->
        <webwork>
            <setup>

            <pg-code>
                $a = random(2,20,2);
                $b = $a-1;
                $answer = Formula("$a*(x+4)");
                $answer2 = Formula("$b*x+($a*4+2)");
                $evaluator2 = $answer2->cmp(
                    checker => sub {
                        my ($correct,$student,$ansHash) = @_;
                        Value::Error('This is not a linear equation.') unless ($student->D('x') == 0 );
                        Value::Error('x=2 is not a solution to this equation.') unless ($student->eval(x=>2) == 6);
                        return 1;
                    }
                );
            </pg-code>
            </setup>
            <statement>
              <p permid="yzR">
                Fill in the right side of the equation to create a linear equation with the properties listed.
              </p>

              <p permid="eHa">
                <ol label="a." permid="RIO">
