              $unit = list_random('m', 'cm', 'in', 'ft');
              $dinteger = random(2,20);
              $d = NumberWithUnits("$dinteger $unit");
              $c = FormulaWithUnits("$dinteger pi $unit");
              Context("ImplicitEquation");
              Context()->variables->are(d => 'Real');
