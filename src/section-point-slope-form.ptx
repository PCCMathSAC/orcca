              $gr->arrowTo($xmin,0,'black',1);
              $gr->moveTo(0,0);
              $gr->arrowTo($xmax-($xmax-$xmin)/240,0,'black',1);
              $gr->moveTo(0,0);
              $gr->arrowTo(0,$ymin+($ymax-$ymin)/240,'black',1);
              $gr->moveTo(0,0);
              $gr->arrowTo(0,$ymax,'black',1);
