                <mrow>\amp=\frac{\substitute{30}-\substitute{150}}{\substitute{0}-\substitute{(-3)}}</mrow>
                <mrow>\amp=\frac{-120}{3}</mrow>
                <mrow>\amp=-40</mrow>
