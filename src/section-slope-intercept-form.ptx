                        Context()->flags->set(tolType=>'absolute',tolerance=>2500,limits=>[0,12000]);
                        $f=Formula("1.645*x+27370");
                        for my$j(0,1){
                          $gr[$j] = init_graph(-1000,-10000,12000,60000,axes=>[0,0],grid=>[13,14],size=>[240,240]);
                          $gr[$j] -> lb('reset');
                          for my$i(4000,8000){$gr[$j]->moveTo($i,-200);$gr[$j]->lineTo($i,200,'black',3);$gr[$j]->lb(new Label($i,-200,$i,'black','center','top'));};
                          for my$i(10000,20000,30000,40000,50000){$gr[$j]->moveTo(-100,$i);$gr[$j]->lineTo(100,$i,'black',3);$gr[$j]->lb(new Label(200,$i,$i,'black','left','middle'));};
                          $gr[$j]->lb(new Label(11500,200,'tuition','black','right','bottom'));
